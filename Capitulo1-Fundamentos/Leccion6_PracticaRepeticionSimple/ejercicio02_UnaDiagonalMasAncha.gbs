procedure Diagonal4AzulVolviendo(){
  Diagonal4AzulAvanzando()
  repeat(4){
    Mover(Sur)
    Mover(Oeste)
  }
}

procedure Diagonal4AzulAvanzando(){
  repeat(4){
    Poner(Azul)
    Mover(Este)
    Mover(Norte)
  }
}
//____________________________

procedure BandaDiagonal4(){
  repeat(3){
    Diagonal4AzulVolviendo()
    Mover(Norte)
  }
  repeat(3){
    Mover(Sur)
  }
}